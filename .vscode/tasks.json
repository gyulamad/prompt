{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-prompt", // Matches the "preLaunchTask" in launch.json
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++23",
                // "-pthread",
                "src/prompt.cpp",
                "-o",
                "builds/prompt.gdb",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated by Debug Configuration"
        }
    ]
}