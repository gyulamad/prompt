{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-tests", // Matches the "preLaunchTask" in launch.json
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++23",
                // "-pthread",
                "tests/tests.cpp",
                "-o",
                "tests/tests.gdb",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated by Debug Configuration"
        },
        {
            "label": "build-prompt", // Matches the "preLaunchTask" in launch.json
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++23",
                // "-pthread",
                "prompt.cpp",
                "-o",
                "prompt.gdb",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated by Debug Configuration"
        }
    ]
}
