{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-prompt", // Matches the "preLaunchTask" in launch.json
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++23",
                // "-pthread",
                "${workspaceFolder}/src/prompt.cpp",
                "-o", "${workspaceFolder}/builds/prompt.gdb",
                "-g", "-O0", "-fsanitize=address", //"-DTEST", //"-DTEST_FAILURE_DIES",
                // "-Ofast",
                "-I${workspaceFolder}/libs/ggerganov/whisper.cpp/include",
                "-I${workspaceFolder}/libs/ggerganov/whisper.cpp/ggml/include",
                "${workspaceFolder}/libs/ggerganov/whisper.cpp/build/src/libwhisper.so.1.7.4", 
                "-Wl,-rpath,${workspaceFolder}/libs/ggerganov/whisper.cpp/build/src",  // <-- Add this
                "-lrt", "-lm", "-lasound", //"-ljack", 
                "-lportaudio", //"-lwhisper",
                "-lcurl",
                "-pthread"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated by Debug Configuration"
        }
    ]
}