    "version": "0.2.0",
    "configurations": [
        {
            "name": "DBG:prompt.cpp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/builds/prompt.gdb", // Update this path if needed
            "args": [
                //"--voice", 
                //"--model", "test7"
            ], // Add program arguments if necessary
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                // {
                //     "name": "LSAN_OPTIONS",
                //     "value": "verbosity=1:log_threads=1"
                // }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", // Path to GDB
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false //true
                }
            ],
            "preLaunchTask": "build-debug-prompt", // Matches a task defined in tasks.json
            // "internalConsoleOptions": "openOnSessionStart"
        },
        {
