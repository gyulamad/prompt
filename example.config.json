{
    "secrets": {
        "google_gemini": "xxxxxx"
    },
    "user": {
        "language": "en",
        "prompt": "> ",
        "auto_save": true
    },
    "speech": {
        "stt_voice_in": true,
        "tts_voice_out": true,
        "stt": {
            "voice_recorder": {
                "sample_rate": 16000,
                "frames_per_buffer": 512,
                "buffer_seconds": 5
            },
            "noise_monitor": {
                "threshold_pc": 0.1,
                "window": 16384
            },
            "transcriber": {
                "model": "libs/ggerganov/whisper.cpp/models/ggml-base-q8_0.bin"
            },
            "poll_interval_ms": 100
        },
        "tts": {
            "speed": 200,
            "gap": 0,
            "beep_cmd": "sox -v 0.1 beep.wav -t wav - | aplay -q -N",
            "think_cmd": "sox -v 0.1 think.wav -t wav - | aplay -q -N"
        },
        "stall": true
    },
    "model": {
        "memory_max": 1000000,
        "memory_loss_ratio": 0.5,
        "think_steps": 3,
        "think_deep": 5
    }
}